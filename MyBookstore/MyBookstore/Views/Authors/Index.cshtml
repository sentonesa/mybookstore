@model IEnumerable<MyBookstore.Models.AuthorsModels>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    <a href="@Url.Action("GenerateReport" , "Authors")" class="btn btn-info"
 onclick='return confirm("Generate Report?" ); '>
        <i class="fa fa-print"></i>


    </a>
</p>

<table id="tblAuthors1" class="table">
    <thead>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zip)
        </th>
        <th></th>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zip)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Authors", new { id=item.ID })" class="btn btn-xs btn-info">
                <i class='fa fa-edit'></i>
            </a>
            <a href="@Url.Action("GenerateIndividualReport", "Authors", new { id=item.ID })" class="btn btn-xs btn-default">
                <i class='fa fa-print'></i>
            </a>
            <a href="@Url.Action("Delete", "Authors", new { id=item.ID })" class="btn btn-xs btn-danger">
                <i class='fa fa-trash'></i>
            </a>
           
             
           </td>
    </tr>
}

</table>
<script>
    $(document).ready(function () {
        $('#tblAuthors1').DataTable();
    });


</script>
